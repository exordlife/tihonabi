    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: post.latitude, lng: post.longitude},
      //倍率はお好みで
      zoom: 8,

      mapTypeControl: false,
      mapId: '36c981c5b4a8e2b0',
      navigationControl: false,
      gestureHandling: "auto"


    });

    // forは繰り返し処理
