<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">

      <%= link_to root_path do%>
        <%= image_tag 'Tippy' , size: "150x55"%>
      <% end %>
      <% if user_signed_in? %>
      <%= form_with url: posts_path, method: :get, local: true, class: "d-flex search-status col-md-4 col-md-offset-4" do |f| %>
        <%= f.text_field :keyword, value: @keyword ,class: "form-control me-2" ,placeholder: "キーワード検索"%>
        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
      <span class="d-flex">
          <div class="mr-5">
            <%= link_to new_post_path ,class: "mr-0" do%>
              <%= image_tag 'image', size: "70x70" %>
            <% end %>
          </div>
          <div class="mr-5">
            <%= link_to user_path(current_user), class: "image" do %>
              <%= image_tag 'image1', size: "70x70" %>
            <% end %>
          </div>
          <div>
            <%= link_to user_path(current_user), class: "image" do %>
              <%= image_tag 'hatena', size: "70x70" %>
            <% end %>
          </div>
      </span>
      <% else %>
        <li>
          <%= link_to "Tippy", root_path, class: "navbar-brand"%>
        </li>
        <li>
          <%= link_to "新規登録", new_user_registration_path, class: "navbar-brand" %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "navbar-brand" %>
        </li>
      <% end %>
    </div>
  </nav>
</header>

<div class="container mt-5">
  <h4><%= @genre.name %></h4>
  <div class="row">
        <% @posts.each do |post| %>
        <div class="col-4 my-2">
          <div class="card back-color2 mt-3 pt-3 imaging h-100">
              <div class="a">
                <% post.image.each do |image| %>
                  <%= link_to post_path(post) do %>
                    <%= image_tag image, width: '90%', height: '90%', class: "d-block mx-auto image_size" %>
                  <% end %>
                <% end %>
              </div>
            <div class="card-body">
              <h5 class="card-title">
                <div>
                  <%= post.content %>
                </div>
                <%= link_to genre_path(post.genre) do %>
                  <%= post.genre.name %>
                <% end %>
              </h5>
              <% if user_signed_in? %>
                <div class="favorite_buttons_<%= post.id %>">
                <%= render "favorites/favorites", post: post %>
                </div>
                <%= link_to post_path(post) ,class: "mr-0" do%>
                  <%= image_tag 'comment', size: "30x20" %>
                <% end %>
                <%= link_to post_path(post) ,class: "mr-0" do%>
                  <%= image_tag 'shosai', size: "30x20" %>
                <% end %>
              <% end %>
            </div>
          </div>
          </div>
        <% end %>

    </div>
  </div>
</div>

<script>
  // オプションを指定してSkipprの実行
$(function() {
    $('.a').slick({
        dots: true,
        autoplay: true,
        autoplaySpeed: 5000,
    });

});
</script>