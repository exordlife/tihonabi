<div class="container px-5 px-sm-0">
  <div class="search-form">
    <%= form_with url: posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  
  <div class="row mt-3">
    <%= image_tag 'kokonihon', size: "1200x500" %>
  </div>
  <div class="row">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th>content</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                  <% post.image.each do |image| %>
                    <%= image_tag image,size: "200x200" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= post.title %>
              </td>
              <td>
                <%= post.content %>
              </td>
              <td>
                <%= link_to "削除", post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
              </td>
              <td class="favorite_buttons_<%= post.id %>">
　　          　<%= render "favorites/favorites", post: post %>
              <td>
                <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
              </td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>



