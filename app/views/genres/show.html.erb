<% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to post_path(post) do %>
        <% post.image.each do |image| %>
          <%= image_tag image,size: "200x200" %>
        <% end %>
      <% end %>
    </td>
    <td>
      <%= post.title %>
    </td>
    <td>
      <%= post.content %>
      <%= post.genre.name %>
    </td>
    <% if user_signed_in? %>
    <td>
      <% if post.user==current_user %>
        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
      <% end %>
    </
    <td class="favorite_buttons_<%= post.id %>">
    　<%= render "favorites/favorites", post: post %>
    <td>
      <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
    </td>
    <% end %>
  </tr>
<% end %>