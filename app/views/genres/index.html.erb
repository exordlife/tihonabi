<h3 class="mt-3">ジャンル一覧・追加</h3>

<br>
<%= form_with model:@new_genre, local:true do |f| %>
  <p>ジャンル名  <%= f.text_field :name, autofocus: true, placeholder:"" %> 
  <%= f.submit "ジャンルを作成する",class: "btn btn-success" %></p>
<% end %>

<% @genres.each do |genre| %>
  <div>
    <%= genre.name %>
    <%= link_to "編集する", edit_genre_path(genre),class: "btn btn-success" %>
    <%= link_to "削除", genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
  </div>
<% end %>
