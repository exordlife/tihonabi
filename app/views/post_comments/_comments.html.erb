<p>コメント件数：<%= post.post_comments.count %></p>
<% post.post_comments.each do |post_comment| %>
<div class="d-flex">
  <%= link_to user_path(post_comment.user) do %>
    <%= image_tag post_comment.user.profile_image, class: "profile_img3 d-block mx-auto" %>
  <% end %>
  <h6 class="ml-2  my-auto"><%= post_comment.user.name %></h6>
</div>
<h4><%= post_comment.comment %></h4>
  <% if post_comment.user == current_user %>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
  <% end %>
<% end %>