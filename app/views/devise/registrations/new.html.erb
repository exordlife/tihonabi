
<div class="container px-5 px-sm-0 mt-5">
  
  
  
  <div class="row d-flex">
    
    <div class="col-6">
      <div class="col">
        <div class="mr-5">
          <%= image_tag 'Tippylogo', size:"500x200"%>
        </div>
      </div>
    </div>
    <div class="col-5">
      <div class="card back-color3 imaging" style="height:450px">
        <div class="card-body">
          <div class="col">
            
            <div class="d-flex justify-content-center">
              <%= image_tag 'Sign up', size:"100x50"%>
            </div>
          
            <div class="d-flex justify-content-center">
              <div>
                <%= form_with model: @user, url: user_registration_path do |f| %>
                
          
                <div class="field mt-3">
                  <strong>ユーザ名</strong><br>
                  <%= f.text_field :name %>
                </div>
          
                <div class="field mt-3">
                  <strong>メールアドレス</strong><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
          
                <div class="field mt-3">
                  <strong>パスワード</strong>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %>文字以上)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>
          
                <div class="field mt-3">
                  <strong>パスワード確認</strong><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
          
                <div class="actions mt-3">
                  <%= f.submit "登録完了",class: "btn btn-outline-success" %>
                </div>
              <% end %>
              <div class="mt-2">
              <%= render "devise/shared/links" %>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>